<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leyue.smartcs.knowledge.mapper.DocMapper">
    
    <!-- 分页查询文档 -->
    <select id="listByPage" resultType="com.leyue.smartcs.knowledge.dataobject.DocDO">
        SELECT *
        FROM cs_doc
        WHERE is_deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        ORDER BY updated_at DESC
        LIMIT #{offset}, #{limit}
    </select>
    
    <!-- 获取总记录数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*)
        FROM cs_doc
        WHERE is_deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
    </select>
    
</mapper> 