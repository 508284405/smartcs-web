<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leyue.smartcs.knowledge.mapper.ChunkMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.leyue.smartcs.knowledge.dataobject.ChunkDO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="content_id" property="contentId" jdbcType="BIGINT"/>
        <result column="chunk_index" property="chunkIndex" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="LONGVARCHAR"/>
        <result column="token_size" property="tokenSize" jdbcType="INTEGER"/>
        <result column="created_by" property="createdBy" jdbcType="BIGINT"/>
        <result column="created_at" property="createdAt" jdbcType="BIGINT"/>
        <result column="updated_at" property="updatedAt" jdbcType="BIGINT"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, content_id, chunk_index, text, token_size, created_by, created_at, updated_at
    </sql>

    <!-- insertBatch --> 

    <insert id="insertBatch"
            useGeneratedKeys="true"
            keyProperty="id"
            parameterType="com.leyue.smartcs.knowledge.dataobject.ChunkDO"
            keyColumn="id">
        insert into t_kb_chunk (content_id, chunk_index, content, token_size, created_by, created_at, updated_at)
        values
        <foreach collection="chunks" item="chunk" separator=",">
            (#{chunk.contentId}, #{chunk.chunkIndex}, #{chunk.content}, #{chunk.tokenSize}, #{chunk.createdBy}, #{chunk.createdAt}, #{chunk.updatedAt})
        </foreach>
    </insert>

    <!-- updateBatchVectorId -->

    <update id="updateBatchVectorId">
        <foreach collection="chunks" item="chunk" separator=";">
            update t_kb_chunk set vector_id = #{chunk.vectorId} where id = #{chunk.id}
        </foreach>
    </update>
</mapper>