<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leyue.smartcs.eval.mapper.RagEvalDatasetMapper">

    <resultMap id="BaseResultMap" type="com.leyue.smartcs.eval.dataobject.RagEvalDatasetDO">
        <id column="id" property="id" />
        <result column="dataset_id" property="datasetId" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="domain" property="domain" />
        <result column="language" property="language" />
        <result column="total_cases" property="totalCases" />
        <result column="active_cases" property="activeCases" />
        <result column="creator_id" property="creatorId" />
        <result column="creator_name" property="creatorName" />
        <result column="tags" property="tags" typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler" />
        <result column="metadata" property="metadata" typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler" />
        <result column="status" property="status" />
        <result column="is_deleted" property="isDeleted" />
        <result column="created_by" property="createdBy" />
        <result column="updated_by" property="updatedBy" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <select id="selectByCreatorId" resultMap="BaseResultMap">
        SELECT * FROM t_rag_eval_dataset 
        WHERE creator_id = #{creatorId} AND is_deleted = 0
        ORDER BY created_at DESC
    </select>

    <select id="selectByDomainAndStatus" resultMap="BaseResultMap">
        SELECT * FROM t_rag_eval_dataset 
        WHERE domain = #{domain} AND status = #{status} AND is_deleted = 0
        ORDER BY created_at DESC
    </select>

    <select id="selectByTagsContaining" resultMap="BaseResultMap">
        SELECT * FROM t_rag_eval_dataset 
        WHERE JSON_CONTAINS(tags, JSON_QUOTE(#{tag})) AND is_deleted = 0
        ORDER BY created_at DESC
    </select>

    <select id="selectActiveDatasets" resultMap="BaseResultMap">
        SELECT * FROM t_rag_eval_dataset 
        WHERE status = 1 AND is_deleted = 0
        ORDER BY created_at DESC
    </select>

    <update id="updateCaseCounts">
        UPDATE t_rag_eval_dataset 
        SET total_cases = #{totalCases}, 
            active_cases = #{activeCases},
            updated_at = #{updatedAt}
        WHERE dataset_id = #{datasetId}
    </update>

</mapper>