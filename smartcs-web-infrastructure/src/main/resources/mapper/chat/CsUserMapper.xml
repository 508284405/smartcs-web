<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leyue.smartcs.chat.mapper.CsUserMapper">
    
    <!-- 根据用户类型查询用户列表 -->
    <select id="findUsersByType" resultType="com.leyue.smartcs.chat.dataobject.CsUserDO">
        SELECT * FROM t_cs_user WHERE user_type = #{userType} AND status = 1 AND is_deleted = 0
    </select>
    
    <!-- 根据状态查询客服列表 -->
    <select id="findAgentsByStatus" resultType="com.leyue.smartcs.chat.dataobject.CsUserDO">
        SELECT * FROM t_cs_user WHERE user_type = 1 AND status = #{status} AND is_deleted = 0
    </select>
    
</mapper> 