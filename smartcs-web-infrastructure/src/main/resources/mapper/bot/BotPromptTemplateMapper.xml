<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leyue.smartcs.bot.mapper.BotPromptTemplateMapper">

    <!-- 根据模板标识查询模板 -->
    <select id="selectByTemplateKey" resultType="com.leyue.smartcs.bot.dataobject.BotPromptTemplateDO">
        SELECT 
            id,
            template_key,
            template_content,
            is_deleted,
            created_by,
            updated_by,
            created_at,
            updated_at
        FROM t_bot_prompt_template
        WHERE template_key = #{templateKey}
        AND is_deleted = 0
    </select>

</mapper> 